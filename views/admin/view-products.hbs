<section>
    <div class="container">
        <div class="row mt-4 mb-2">
            <a href="/admin/add-products" class="btn btn-success ml-auto">Add Products</a>

        </div>


        <table class="table mt-5" id="productsTable">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th scope="col">Price</th>
      <th>Image </th>
      <th>Options</th>
    </tr>
  </thead>
  <tbody>
      {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Description}}</td>
      <td>{{this.Price}}</td>
      <td><img style="width:90px;height:90px" src="products-images/{{this._id}}.jpg" alt=""></td>
      <td>
        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm ('Are you want to delete {{this.Name}}?')">Delete</a>

      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>
<script>
  $(function () {
    $('#productsTable').DataTable();
} );
</script>